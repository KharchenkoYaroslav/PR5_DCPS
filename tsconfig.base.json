{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "bundler",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2022",
    "module": "esnext",
    "lib": ["es2023", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "paths": {
      "@my-workspace/algorithm": ["./libs/algorithm/src/index.ts"],
      "@my-workspace/shared": ["./libs/shared/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
